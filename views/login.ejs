<%- include('header') %>

  <section id="login-page" class="flex-center">
    <div class="flex-center login-con">
      <h2>“Back for Another Slice?”</h2>

      <div class="log-in-container flex-center">
        <h2>Sign In</h2>

        <div class="login-register">
          create an account?
          <a href="/register">register</a>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
          <p style="color: red; margin-bottom: 10px;"><%= error %></p>
        <% } %>

        <form action="/login" id="form1" method="post" autocomplete="off"></form>
        <label for="username">Email</label>
        <input type="text" form="form1" autocomplete="off" name="username" class="input-txt">
        <label for="password">Password</label>
        <input type="password" form="form1" autocomplete="off" name="password" class="input-txt">
        <input type="submit" form="form1" class="input-btn">
      </div>
    </div>
  </section>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="main.js"></script>

</body>
</html>
